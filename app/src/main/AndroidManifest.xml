<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.healthdatagathering"
    android:versionCode="1"
    android:versionName="1.0">


    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.example.android.healthdatagathering.HealthDataGatheringApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.samsung.android.health.permission.read"
            android:value="com.samsung.health.step_count;com.samsung.shealth.step_daily_trend; com.samsung.health.heart_rate; com.samsung.health.oxygen_saturation;
com.samsung.health.uv_exposure; com.samsung.health.floors_climbed;  com.samsung.health.blood_glucose; com.samsung.health.blood_pressure; com.samsung.health.body_temperature; com.samsung.health.sleep; com.samsung.health.sleep_stage" />
        <activity android:name=".MainActivity"
            android:label="health data hub"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SamsungSHealthActivity" android:label="@string/app_name" android:theme="@android:style/Theme.Translucent.NoTitleBar">
        </activity>
        <service android:name=".DataTransmittingJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>